<!DOCTYPE html>
<html>
<head>
  <title>CmmiMongo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Lato:400,700,300,900' rel='stylesheet' type='text/css'>
</head>
<body>

<HEADER>
	<nav class="be-red white large-padding nav">
		<ul class="no-list row center-xs middle-xs">
			<li class="col-md">
				<h1 class="no-margin" id="logo"> <%= link_to "CMMI-Dev", pdf_show_url %></h1>
			</li> 
			<li class="col-md">
				<%= link_to "Inicio", root_path %>
			</li>
			<li class="col-md"><a href=""> CMMi-dev</a>
				<ul>
					<li class="col-md">
						<%= link_to "Niveles", levels_path %>
					</li>					
					<li class="col-md">
						<%= link_to "Areas de proceso", processareas_path %>
					</li>
					<li class="col-md">
						<%= link_to "Metas", goals_path %>
					</li>
					<li class="col-md">
						<%= link_to "Practicas", practices_path %>
					</li>				
				</ul>				
			</li>
			<li class="col-md">
				<%= link_to "Compañia", companies_path %>
			</li>
			<li class="col-md">
				<%= link_to "Mapa de procesos", steps_path %>
			</li>
			<li class="col-md">
				<%= link_to "Proyecto", projects_path %>
			</li>		
			<li class="col-md">
				<%= link_to "Proceso del proyecto", project_steps_path %>
			</li>
			<li class="col-md">
				<%= link_to "Lineas base", base_lines_path %>
			</li>					
			<li class="col-md">
				<div id="user_nav">
				  <% if user_signed_in? %>
				    Sesión como: <%= current_user.email %>.				     
				     Sino?
				    <%= link_to "Cerrar Sesión", destroy_user_session_path %>
				  <% else %>
				    <%= link_to "Crear Sesión", new_user_registration_path %> o
				    <%= link_to "iniciar Sesión", new_user_session_path %>
				  <% end %>
				</div>
			</li>
		</ul>
	</nav>
</HEADER>

<%= yield %>

<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
    <div class="box text-left">	
		<footer>
			<%= render 'layouts/footer' %>
			<% debug(params) if Rails.env.development? %>

		</footer>
   </div>    
  </div>
</div>

</body>
</html>
