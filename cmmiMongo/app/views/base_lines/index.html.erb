<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
    <div class="box text-left">      
    
      <p id="notice"><%= notice %></p>

      <h1>Lineas base</h1>

      <table>
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Estado</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @base_lines.each do |base_line| %>
            <tr>
              <td><%= base_line.t_name %></td>
              <td><%= base_line.t_state %></td>
              <td><%= link_to 'Ver', base_line %></td>
              <td><%= link_to 'Editar', edit_base_line_path(base_line) %></td>
              <td><%= link_to 'Eliminar', base_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Nueva linea base', new_base_line_path %>
    </div>    
  </div>
</div>